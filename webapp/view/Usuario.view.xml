<mvc:View controllerName="br.com.idxtecUsuario.controller.Usuario"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:t="sap.ui.table">
	<App id="app">
		<pages>
			<Page showHeader="false">
				<content>
					<VBox class="sapUiSmallMargin">
						<Panel headerText="Usuario">
							<t:Table id="tableUsuario"
								rows="{path: '/Usuarios'}"
								class="sapUiSizeCondensed"
								selectionMode="Single"
								selectionBehavior="Row"
								enableSelectAll="false"
								editable="true"
								visibleRowCountMode="Auto"
								enableBusyIndicator="true"
								alternateRowColors="true"
								enableCustomFilter="false">
								<t:toolbar>
									<Toolbar>
										<Title text="Lista de UsuÃ¡rios"/> 
									</Toolbar>
								</t:toolbar>
								<t:columns>
									<t:Column filterProperty="NomeCompleto" sortProperty="NomeCompleto">
										<Label text="Nome"/>
										<t:template>
											<Text text="{NomeCompleto}"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Username" sortProperty="Username">
										<Label text="Username"/>
										<t:template>
											<Text text="{Username}"/>
										</t:template>
									</t:Column>
								</t:columns>
								<t:footer>
									<Toolbar>
										<Button icon="sap-icon://refresh" press="onRefresh"/>
										<ToolbarSpacer/>
										<Button icon="sap-icon://filter"/>
										<Button icon="sap-icon://clear-filter"/>
									</Toolbar>
								</t:footer>
							</t:Table>
						</Panel>
					</VBox>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add" text="Incluir novo" press="onIncluir"/>
						<Button icon="sap-icon://edit" text="Editar" press="onEditar"/>
						<Button icon="sap-icon://delete" text="Remover" press="onRemover"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>