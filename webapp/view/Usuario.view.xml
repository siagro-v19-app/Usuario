<mvc:View controllerName="br.com.idxtecUsuario.controller.Usuario"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:t="sap.ui.table">
	<App id="app">
		<pages>
			<Page>
				<content>
					<t:Table id="tableUsuario"
						rows="{path: '/Usuarios'}"
						alternateRowColors="true">
						<t:toolbar>
							<Toolbar>
								<Title text="Lista de UsuÃ¡rios"/> 
							</Toolbar>
						</t:toolbar>
						<t:columns>
							<t:Column filterProperty="NomeCompleto" sortProperty="NomeCompleto">
								<Label text="Nome"/>
								<t:template>
									<Text text="{NomeCompleto}"/>
								</t:template>
							</t:Column>
							<t:Column filterProperty="Username" sortProperty="Username">
								<Label text="Username"/>
								<t:template>
									<Text text="{Username}"/>
								</t:template>
							</t:Column>
						</t:columns>
					</t:Table>
				</content>
				<footer>
					<Toolbar>
						<Button icon="sap-icon://refresh" press="onRefresh"/>
						<ToolbarSpacer/>
						<Button text="Incluir novo" press="onIncluir"/>
						<Button text="Editar" press="onEditar"/>
						<Button text="Remover" press="onRemover"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>